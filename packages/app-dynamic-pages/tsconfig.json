{
  "extends": "../../tsconfig.json",
  "include": ["src", "__tests__/**/*.ts"],
  "references": [{ "path": "../app-headless-cms" }, { "path": "../form" }],
  "compilerOptions": {
    "rootDirs": ["./src", "./__tests__"],
    "outDir": "./dist",
    "declarationDir": "./dist",
    "paths": {
      "~/*": ["./src/*"],
      "~tests/*": ["./__tests__/*"],
      "@webiny/app-headless-cms/*": ["../app-headless-cms/src/*"],
      "@webiny/app-headless-cms": ["../app-headless-cms/src"],
      "@webiny/form/*": ["../form/src/*"],
      "@webiny/form": ["../form/src"]
    },
    "baseUrl": "."
  }
}
