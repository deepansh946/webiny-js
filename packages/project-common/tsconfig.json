{
  "extends": "../../tsconfig.json",
  "include": ["src", "__tests__/**/*.ts"],
  "references": [{ "path": "../pulumi" }],
  "compilerOptions": {
    "rootDirs": ["./src", "./__tests__"],
    "outDir": "./dist",
    "declarationDir": "./dist",
    "paths": {
      "~/*": ["./src/*"],
      "~tests/*": ["./__tests__/*"],
      "@webiny/pulumi/*": ["../pulumi/src/*"],
      "@webiny/pulumi": ["../pulumi/src"],
      "@webiny/pulumi-aws/*": ["../pulumi-aws/src/*"],
      "@webiny/pulumi-aws": ["../pulumi-aws/src"]
    },
    "baseUrl": "."
  }
}
