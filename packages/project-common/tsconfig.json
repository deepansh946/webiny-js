{
  "extends": "../../tsconfig.json",
  "include": ["src", "__tests__"],
  "references": [
    { "path": "../admin" },
    { "path": "../app" },
    { "path": "../app-admin" },
    { "path": "../app-admin-users-cognito" },
    { "path": "../app-form-builder" },
    { "path": "../app-page-builder" },
    { "path": "../app-page-builder-elements" },
    { "path": "../app-serverless-cms" },
    { "path": "../app-theme" },
    { "path": "../app-website" },
    { "path": "../cli-plugin-scaffold" },
    { "path": "../cli-plugin-scaffold-ci" },
