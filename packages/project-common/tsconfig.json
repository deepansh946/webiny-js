      "@webiny/react-router/*": ["../react-router/src/*"],
      "@webiny/react-router": ["../react-router/src"],
      "@webiny/serverless-cms-aws/*": ["../serverless-cms-aws/src/*"],
      "@webiny/serverless-cms-aws": ["../serverless-cms-aws/src"],
      "@webiny/theme/*": ["../theme/src/*"],
      "@webiny/theme": ["../theme/src"],
      "@webiny/validation/*": ["../validation/src/*"],
      "@webiny/validation": ["../validation/src"],
      "@webiny/website/*": ["../website/src/*"],
      "@webiny/website": ["../website/src"]
    },
    "baseUrl": "."
  }
}
